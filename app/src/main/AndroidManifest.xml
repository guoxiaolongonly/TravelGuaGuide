<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.xiaolongonly.guaplayguide">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="cn.xiaolongonly.guaplayguide.base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme">
        <activity
            android:name="cn.xiaolongonly.guaplayguide.ui.LaunchActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="cn.xiaolongonly.guaplayguide.ui.MainActivity" />
        <activity android:name="cn.xiaolongonly.guaplayguide.ui.CommonActivity" />
        <activity android:name="cn.xiaolongonly.guaplayguide.ui.AboutActivity" />
        <activity android:name="cn.xiaolongonly.guaplayguide.ui.web.WebActivity" />
        <activity android:name="cn.xiaolongonly.guaplayguide.ui.TextViewActivity" />
        <!-- 适配库 标注UI切图尺寸 -->
        <meta-data
            android:name="design_width"
            android:value="1080" />
        <meta-data
            android:name="design_height"
            android:value="1920" />
    </application>


</manifest>